<!--new code added header div-->
<header class="header">
  <!--consistent nav bar-->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Computer Science Trivia Game</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home
            <span class="sr-only">(current)</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/about">About Us</a>
        </li>
      </ul>
    </div>
  </nav>
  <!--new code header div-->
</header>

<div class="container" id="main-content">
  <!--Main Question container-->
  <div class="container" id="question-choice">
    <div class="row">

      <!--new code quiz summary container, ??Suggest to team about putting this in footer-->
      <div class="container" id="summary">
        <div class="row">

          <div class="col col-md-4">
            <p id="score">Score</p>

          </div>
          <div class="col col-md-4">
            Trivia Mania!
            <p id="username"></p>
          </div>

          <div class="col col-md-4">
            <p id="counter">Time Left</p>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-interval="false" data-ride="carousel">
          {{#if trivia }}
          <div class="carousel-inner">
            {{#each trivia}}
            <div class="carousel-item {{#ifCond @index 0}}active{{/ifCond}}">
              <div class="card-body" id="answer-options">
                <div>
                  <h1 class="trivia-question" data-value="{{this.correctAnswer}}" id="question-{{@index}}">{{this.question}}</h1>
                  <div class="trivia-options">
                    {{#each this.options}}
                    <button type="button" data-value="{{this.options}}" class="btn btn-outline-dark btn-lg btn-block" id="answer-btn-{{@index}}">
                      <div id="select-option">{{this}}</div>
                    </button>
                    {{/each}}
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
        <h4 style="margin: 0 auto">Loading...</h3>
          <div class="lds-facebook">
            <div></div>
            <div></div>
            <div></div>
          </div>
          {{/if}}
          <p id="userChoice"></p>
        </div>
      </div>
    </div>
  </div>
</div>




<div class="modal" id="score-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Total Score</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p id="grand-score">Modal body text goes here.</p>
      </div>
      <div class="modal-footer">

        <button type="button" class="btn btn-secondary" id="close-modal" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-secondary" id="play-again" data-dismiss="modal">Play Again</button>
        <button type="button" class="btn btn-primary" id="save-score" data-dismiss="modal">Save Score</button>

      </div>
    </div>
  </div>
</div>

